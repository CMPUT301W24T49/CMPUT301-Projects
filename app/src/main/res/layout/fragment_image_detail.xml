<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10283B">

    <!-- Centered LinearLayout with increased width -->
    <LinearLayout
        android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_centerInParent="true">



    <TextView
        android:id="@+id/image_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Detail"
        android:padding="16dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
         /> <!-- Replace with your image reference -->
    <TextView
        android:id="@+id/image_uploadedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Uploaded By"
        android:padding="16dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/image_uploadTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Upload Time"
        android:padding="16dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/image_relatedTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Relateed To"
        android:padding="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_delete_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"/>

    <Button
        android:id="@+id/btn_cancel_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"/>

</LinearLayout>
    </RelativeLayout>
